<?xml version="1.0"?>
<particles emitter="point">

    <spreading angle="45"        />
    
    <velocity  x="0.000"
               y="0.003"
               z="0.003"         />
    
    
    <materials>
        <material name="water.png" compositing="blend" light="N" ignore="Y"/>
    </materials>

    
    <!-- Amount of particles emitted per second -->
    <rate      min="150"
               max="300"         />
    
    <!-- Minimal and maximal lifetime of a particle, in milliseconds. -->
    <lifetime  min="400"
               max="600"         />
    
    <!-- Size of the particles -->
    <size      min="0.3"
               max="0.8"        />

    <color     min="255 255 255"
               max="255 255 255" />

</particles>
