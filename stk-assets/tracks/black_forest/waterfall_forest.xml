<?xml version="1.0"?>
<particles emitter="box" box_x="3.0" box_y="0.8" box_z="3.0">

    <spreading angle="45"      />
    
    <velocity  x="0.000"
               y="0.001"
               z="0.000"         />
    
    <material  file="waterparticles.png"  />
    
    <!-- Amount of particles emitted per second -->
    <rate      min="2"
               max="9"         />
    
    <!-- Minimal and maximal lifetime of a particle, in milliseconds. -->
    <lifetime  min="1000"
               max="3000"         />
    
    <!-- Size of the particles -->
   <size min="1.0"
         max="6.0"
         x-increase-factor="2.6"
         y-increase-factor="2.6" />    
    
    <color     min="255 255 255"
               max="255 255 255" />

    <fadeout   time="5000" />


</particles>
